# ==================================================
# Python API Configuration
# ==================================================
# Copy this file to .env and update the values as needed
# DO NOT commit .env file to version control

# Node-RED Configuration
# URL where Node-RED is running (Docker service name or localhost)
NODE_RED_URL=http://localhost:1880

# Node-RED request timeout in seconds
NODE_RED_TIMEOUT=30

# ==================================================
# API Server Configuration  
# ==================================================

# Host to bind the API server (0.0.0.0 for Docker, 127.0.0.1 for localhost only)
API_HOST=0.0.0.0

# Port for the API server
API_PORT=8000

# ==================================================
# Application Settings
# ==================================================

# Enable debug mode (true/false)
DEBUG=true

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# ==================================================
# CORS Configuration
# ==================================================

# Comma-separated list of allowed origins for CORS
# Example: http://localhost:3000,http://localhost:3001,https://yourdomain.com
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:3001

# ==================================================
# Docker Compose Configuration
# ==================================================

# These are used when running with docker-compose
# NODE_RED_URL will be automatically set to http://node-red:1880 in Docker

# Container timezone (optional)
TZ=UTC

# ==================================================
# Production Settings (Optional)
# ==================================================

# Uncomment and configure for production deployment

# Database URL (if you add database support)
# DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# Redis URL (if you add caching)
# REDIS_URL=redis://localhost:6379/0

# API Keys (if you add authentication)
# SECRET_KEY=your-secret-key-here
# JWT_SECRET=your-jwt-secret-here

# External APIs (if you integrate with other services)
# EXTERNAL_API_KEY=your-external-api-key
# EXTERNAL_API_URL=https://api.example.com

# Monitoring (if you add monitoring services)
# SENTRY_DSN=https://your-sentry-dsn-here
# MONITORING_ENABLED=false

# ==================================================
# Development Settings
# ==================================================

# Auto-reload on file changes (for development)
# RELOAD=true

# Enable API documentation (Swagger/OpenAPI)
# DOCS_ENABLED=true

# ==================================================
# Security Settings (Production)
# ==================================================

# HTTPS settings (when deploying with reverse proxy)
# USE_HTTPS=false
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem

# Rate limiting (requests per minute)
# RATE_LIMIT=100

# ==================================================
# Example Environment-Specific Configurations
# ==================================================

# Development
# NODE_RED_URL=http://localhost:1880
# DEBUG=true
# LOG_LEVEL=DEBUG

# Production
# NODE_RED_URL=http://node-red:1880
# DEBUG=false
# LOG_LEVEL=WARNING
# API_HOST=0.0.0.0
# ALLOWED_ORIGINS=https://yourdomain.com

# Docker Development
# NODE_RED_URL=http://node-red:1880
# DEBUG=true
# LOG_LEVEL=INFO
